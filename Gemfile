  gem 'faker'                 # Use Faker for generate fake data
  gem 'capybara'              # Use Capybara for simulate the userâ€™s interactions
  gem 'guard-rspec'           # Use Gard-RSpec for watches the application and tests and runs specs for you automatically when it detects changes.
  gem 'launchy'               # Use Launchy for opens the default web browser upon failed integration specs to show you what your application is rendering
end

